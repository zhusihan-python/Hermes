<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:Hermes.Features.UutProcessor"
             mc:Ignorable="d" d:DesignWidth="80" d:DesignHeight="100"
             x:Class="Hermes.Features.UutProcessor.SlideBoxView"
			 x:DataType="vm:SlideBoxViewModel">

	<Border BorderBrush="#e6b113" BorderThickness="2" Background="White">
		<ItemsControl ItemsSource="{Binding ItemList}" MinWidth="80" MinHeight="100">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Columns="1"/>
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>

			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<Border BorderBrush="#e6b113" BorderThickness="1" CornerRadius="1">
						<Rectangle RadiusX="3" RadiusY="3">
							<Rectangle.Fill>
								<SolidColorBrush Color="{Binding BackColor}"/>
							</Rectangle.Fill>
						</Rectangle>
					</Border>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Border>

</UserControl>
